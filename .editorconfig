root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
max_line_length = 80

[*.{coffee,html,js,ts,tsx,jsx,json}]
indent_size = 2
indent_style = space
trim_trailing_whitespace = true

[*.html]
indent_size = 4

[*.{css,scss}]
indent_size = 4
indent_style = space
trim_trailing_whitespace = true